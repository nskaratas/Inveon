@model List<Inveon.ECommerce.Entities.Product>
@using Microsoft.AspNetCore.Hosting
@inject IHostingEnvironment HostingEnvironment
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 col-lg-4 col-xl-3 mb-3">
                @{

                    var path = HostingEnvironment.WebRootPath + "\\Uploads\\" + item.Image;
                    if (item.Image != null && System.IO.File.Exists(path))
                    {
                        <img src="../Uploads/@item.Image" class="img-fluid" />
                    }
                    else
                    {
                        <img src="~/no-photo.jpg" class="img-fluid" alt="no-photo.jpg" />
                    }
                }

                <div class="bg-white rounded p-3">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <span>@item.Price <span>TL</span></span>
                </div>
            </div>
        }
    </div>
</div>
